  "description": "AI-powered email CLI with TUI - supports Vertex AI, OpenAI, Anthropic, Ollama",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "intentmail": "./bin/intentmail.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intent-solutions-io/intent-mail.git"
  },
  "keywords": [
